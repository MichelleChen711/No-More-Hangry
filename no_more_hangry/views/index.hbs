<body>
<p>Welcome to {{title}}</p>
<div class="container marketing">
	{{message}}
	<div class="row">
		<div class="centerdiv">
			<div id="authentication">
			<form id="loginForm" action="" method="post" class="form-signin">
			</form>
			</div>
			<div>
				{{#if user}}
					<button id='loginButton' style=display:none >Log In</button>
					<button id='registerButton' style=display:none >Register</button>
				{{else}}
					<button id='loginButton' class= "btn btn-info">Log In</button>
					<button id='registerButton' class= "btn btn-info">Register</button>
				{{/if}}
			</div>
		</div>
	</div>
</div>
<script src="/javascripts/authentication.js"></script>
</body>

